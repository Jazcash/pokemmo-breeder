{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"sourceMap": true,
		"removeComments": true,
		"alwaysStrict": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"noUnusedLocals": true,
		"baseUrl": ".",
		"watch": true
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}
