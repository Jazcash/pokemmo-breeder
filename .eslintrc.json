{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort",
        "unused-imports"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "unused-imports/no-unused-imports-ts": "error",
        "key-spacing": ["error", {
            "beforeColon": false,
            "afterColon": true
        }],
        "curly": "error",
        "eqeqeq": "error",
        "brace-style": "error",
        "keyword-spacing": "error",
        "comma-spacing": "error",
        "block-spacing": "error",
        "no-trailing-spaces": "error",
        "space-before-blocks": "error",
        "indent": ["error", 4]
    }
}